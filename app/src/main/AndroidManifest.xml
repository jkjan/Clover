<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.onecoin">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".dependency.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <receiver
            android:name=".lockscreen.RestartReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity android:name=".activity.LockScreenActivity" />
        <activity android:name=".activity.BaseActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".lockscreen.LockScreenService" />

        <receiver android:name=".lockscreen.LockScreenReceiver" />
    </application>

</manifest>